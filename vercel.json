{
  "version": 2,
  "routes": [
    {
      "src": "/twitter",
      "status": 301,
      "headers": { "Location": "https://twitter.com/nexchangeCC" }
    },
    {
      "src": "/youtube",
      "status": 301,
      "headers": { "Location": "https://www.youtube.com/watch?v=7ujmzb3HzCA" }
    },
    {
      "src": "/fb",
      "status": 301,
      "headers": { "Location": "https://www.facebook.com/nexchangeCC/" }
    },
    {
      "src": "/slack",
      "status": 301,
      "headers": { "Location": "https://join.slack.com/t/nexchangecommunity/shared_invite/MjM0OTU1ODc4NTkyLTE1MDQ0Mzc3NjEtYzZiMTYxMjdhNA" }
    },
    {
      "src": "/telegram",
      "status": 301,
      "headers": { "Location": "https://t.me/joinchat/F5JKfhGOMrzDKsJSmPbf9Q" }
    },
    {
      "src": "/forgot-password/(?<token>[^/]+)",
      "headers": {
        "Set-Cookie": "resetToken=$token",
        "Location": "https://n.exchange/forgot-password"
      },
      "continue": true
    },
    {
      "src": "/(?!en|de|ru)(.*)",
      "dest": "/en",
      "headers": {
        "Set-Cookie": "i18next=en"
      },
      "continue": true
    }
  ]
}
